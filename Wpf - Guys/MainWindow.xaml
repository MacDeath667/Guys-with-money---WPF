        <Button x:Name="joeGivesToBob" Content="Joe gives 10% to Bob" HorizontalAlignment="Left" Margin="52,242,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_3"/>
        <Button x:Name="bobGivesToJoe" Content="Bob give 5$ to Joe" HorizontalAlignment="Left" Margin="223,242,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_4"/>

    </Grid>
</Window>
